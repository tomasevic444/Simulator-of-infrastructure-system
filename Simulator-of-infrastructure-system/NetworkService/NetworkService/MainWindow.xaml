<Window x:Class="NetworkService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkService"
        mc:Ignorable="d"
        Title="Photo editing software products" 
        Height="600" Width="350"
        ResizeMode="NoResize"
        AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Border CornerRadius="30"  BorderThickness="2">
            <Border.Background>
                <ImageBrush ImageSource="Images/background.jpg" Stretch="UniformToFill"/>
            </Border.Background>
        </Border>
        <Border CornerRadius="30"                    
            BorderThickness="4"
            Opacity="0.95"
                Padding="10 5">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="13*"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="13*"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="20"                    
            BorderThickness="2"
            Opacity="0.95"
                    Background="#462AD8">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#462AD8" Offset="0"/>
                            <GradientStop Color="#DA34AE" Offset="0.75"/>
                            <GradientStop Color="#8A16C1" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Grid TextBlock.FontSize="10" TextBlock.FontFamily="Roboto" TextBlock.TextAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="0.3*"/>
                        </Grid.ColumnDefinitions>

                        <!-- TODO undo-->
                        <Button Grid.Column="4" Background="Transparent" BorderBrush="Transparent" Command="{Binding UndoCommand}" HorizontalAlignment="Right" x:Name="btnExit" Click="btnExit_Click">
                            <StackPanel>
                                <Image Source="Images/exit.png" Stretch="Uniform" Width="36" Margin="5"/>
                                <TextBlock Text="EXIT" Foreground="White" FontFamily="Montserrat" Margin="-8 -7 0 0
                                       "/>
                            </StackPanel>
                        </Button>

                        <!-- Tabelarni prikaz -->
                        <Button Background="Transparent" BorderBrush="Transparent" Command="{Binding NavCommand}" CommandParameter="entities" x:Name="tableBtn" Click="tableBtn_Click" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="0,0,70,-0.2" Width="71" >
                            <StackPanel>
                                <Image Source="Images/table.png" Stretch="Uniform" Width="26" Margin="7"/>
                                <TextBlock Text="TABLE" Foreground="White" FontFamily="Montserrat"/>
                            </StackPanel>
                        </Button>

                        <!-- Mrežni prikaz -->
                        <Button  x:Name="displayBtn" Grid.Column="2" Background="Transparent" BorderBrush="Transparent" Command="{Binding NavCommand}" CommandParameter="display" Click="displayBtn_Click">
                            <StackPanel>
                                <Image Source="Images/display.png" Stretch="Uniform" Width="26" Margin="5"/>
                                <TextBlock Text="DISPLAY" Foreground="White" FontFamily="Montserrat"/>
                            </StackPanel>
                        </Button>

                        <!-- Grafovi -->
                        <Button  Grid.Column="3" Background="Transparent" BorderBrush="Transparent" Command="{Binding NavCommand}" CommandParameter="graphs">
                            <StackPanel>
                                <Image Source="Images/graph.png" Stretch="Uniform" Width="26" Margin="8"/>
                                <TextBlock Text="GRAPH" Foreground="White" FontFamily="Montserrat"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
                <!-- Centralni frejm -->
                <Frame x:FieldModifier="public" 
               Name="FrameHolder" 
               NavigationUIVisibility="Hidden" 
               Grid.Row="1" 
               HorizontalAlignment="Center"
                VerticalAlignment="Center"
               Margin="0 0 0 0" 
               Source="Frames/HomePage.xaml">
                </Frame>
                <!-- Donji nav menu -->
                <Border CornerRadius="20"                    
            BorderThickness="2"
            Opacity="0.95"
                        Grid.Row="2"
                    Background="#462AD8">
                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#462AD8" Offset="0"/>
                            <GradientStop Color="#DA34AE" Offset="0.75"/>
                            <GradientStop Color="#8A16C1" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.BorderBrush>
                    <Grid TextBlock.FontSize="10" TextBlock.FontFamily="Roboto" TextBlock.TextAlignment="Center">
                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>

                        </Grid.ColumnDefinitions>

                        <!-- TODO undo-->

                        <Button Grid.Column="0" Background="Transparent" BorderBrush="Transparent" Command="{Binding NavCommand}" CommandParameter="home" >
                            <StackPanel>
                                <Image Source="Images/back.png" Stretch="Uniform" Width="26" Margin="5"/>
                                <TextBlock Text="BACK" Foreground="White" FontFamily="Montserrat"/>
                            </StackPanel>
                        </Button>
                        <!-- Početna stranica -->
                        <Button Grid.Column="1" Background="Transparent" BorderBrush="Transparent" Command="{Binding NavCommand}" CommandParameter="home" x:Name="homeBtn" Click="homeBtn_Click">
                            <StackPanel>
                                <Image Source="Images/home.png" Stretch="Uniform" Width="26" Margin="5"/>
                                <TextBlock Text="HOME" Foreground="White" FontFamily="Montserrat"/>
                            </StackPanel>
                        </Button>




                        <!-- Mrežni prikaz -->


                    </Grid>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Window>
